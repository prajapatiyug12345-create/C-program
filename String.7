#include <stdio.h>

int main() {
    char str[100], temp;
    int i = 0, length, start, end;
    
    printf("Enter a string: ");
    scanf("%s", str); 
    while (str[i] != '\0') {
        i++;
    }
    length = i;
    start = 0;
    end = length - 1;
    
    while (start < end) {
        temp = str[start];
        str[start] = str[end];
        str[end] = temp;
        
        start++;
        end--;
    }
    
    printf("Reversed string: %s\n", str);
    
    return 0;
}
