#include <stdio.h>

int main() {
    char str1[] = "hello";
    char str2[] = "hellx";
    
    char *p1 = str1;
    char *p2 = str2;
    int index = 0;
    
    printf("18. Comparing strings: \"%s\" and \"%s\"\n", str1, str2);
    while (*p1 == *p2 && *p1 != '\0') {
        p1++;
        p2++;
        index++;
    }
    
    if (*p1 == '\0' && *p2 == '\0') {
        printf("    Strings are identical.\n");
    } else {
        printf("    Strings first differ at index %d:\n", index);
        printf("    str1 char: '%c'\n", *p1);
        printf("    str2 char: '%c'\n", *p2);
    }
    
    return 0;
}
