#include <stdio.h>

int main() {
    char str[100];
    int i = 0, length, start, end;
    int is_palindrome = 1;
    
    printf("Enter a string: ");
    scanf("%s", str); 
    while (str[i] != '\0') {
        i++;
    }
    length = i;
    start = 0;
    end = length - 1;
    
    while (start < end) {
        if (str[start] != str[end]) {
            is_palindrome = 0; 
            break;        
        
        start++;
        end--;
    }
    
    if (is_palindrome) {
        printf("The string is a Palindrome.\n");
    } else {
        printf("The string is NOT a Palindrome.\n");
    }
    
    return 0;
}
