#include <stdio.h>

int main() {
    // str1 must be large enough to hold the concatenated result
    char str1[100] = "Hello "; 
    char str2[50];
    int i = 0, j = 0;
    
    printf("String 1 is: %s\n", str1);
    printf("Enter the string to append (String 2): ");
    scanf("%s", str2);
    while (str1[i] != '\0') {
        i++;
    }
    while (str2[j] != '\0') {
        str1[i] = str2[j]; 
        i++;               
        j++;               
    }
    
    // 3. Add the null terminator to the new, combined string
    str1[i] = '\0';
    
    printf("Concatenated string: %s\n", str1);
    
    return 0;
}
