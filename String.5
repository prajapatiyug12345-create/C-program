#include <stdio.h>

int main() {
    char source[100];
    char destination[100];
    int i;
    
    printf("Enter the source string: ");
    scanf("%[^\n]s", source);
    
    i = 0;
    while (source[i] != '\0') {
        destination[i] = source[i];
        i++;
    }
    destination[i] = '\0';
    
    printf("Source string: %s\n", source);
    printf("Copied string (Destination): %s\n", destination);
    
    return 0;
}
