#include <stdio.h>

int main() {
    int size = 10;
    int current_elements = 10; 
    int arr[10] = {10, 20, 30, 20, 50, 60, 70, 80, 90, 100};
    int value_to_delete, position = -1; // position will store the index of the value
    int i;

    printf("Original array (10 elements): 10 20 30 20 50 60 70 80 90 100\n");
    printf("Enter the value to delete (e.g., 20): ");
    scanf("%d", &value_to_delete);
    for (i = 0; i < current_elements; i++) {
        if (arr[i] == value_to_delete) {
            position = i;
            break; 
        }
    }

    if (position != -1) {
        printf("\nValue %d found at index %d. Deleting...\n", value_to_delete, position);
        for (i = position; i < current_elements - 1; i++) {
            arr[i] = arr[i + 1];
        }
        current_elements--;
        printf("Array after deleting the first instance of %d:\n", value_to_delete);
        for (i = 0; i < current_elements; i++) {
            printf("%d ", arr[i]);
        }
        printf("\n");
        
    } else {
        printf("\nValue %d not found in the array. No deletion performed.\n", value_to_delete);
    }

    return 0;
}
